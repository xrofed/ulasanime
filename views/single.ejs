<%- include('partials/header') %>

<style>
    /* Styling Artikel (Prose) */
    .prose { width: 100%; max-width: 100%; overflow-wrap: break-word; word-wrap: break-word; font-size: 1.05rem; line-height: 1.8; color: #d1d5db; }
    .prose h2 { font-size: 1.5rem; font-weight: 700; color: #fff; margin-top: 2rem; margin-bottom: 1rem; line-height: 1.3; }
    .prose h3 { font-size: 1.25rem; font-weight: 600; color: #e5e7eb; margin-top: 1.5rem; margin-bottom: 0.75rem; }
    .prose p { margin-bottom: 1.25rem; }
    .prose ul { list-style-type: disc; padding-left: 1.5rem; margin-bottom: 1.25rem; }
    .prose ol { list-style-type: decimal; padding-left: 1.5rem; margin-bottom: 1.25rem; }
    .prose blockquote { border-left: 4px solid #db2777; padding-left: 1rem; font-style: italic; color: #9ca3af; margin: 1.5rem 0; background: #1f2937; padding: 1rem; border-radius: 0 0.5rem 0.5rem 0; }
    .prose a { color: #db2777; text-decoration: underline; word-break: break-all; }
    .prose img { border-radius: 0.5rem; margin: 1.5rem 0; width: 100%; height: auto; display: block; }
    .prose iframe { width: 100% !important; aspect-ratio: 16/9; border-radius: 0.5rem; margin: 1.5rem 0; }

    /* TOC Styling */
    .toc-container { background-color: #1f2937; border: 1px solid #374151; border-radius: 0.75rem; padding: 1.5rem; margin-bottom: 2rem; }
    .toc-title { font-size: 1.125rem; font-weight: 700; color: #fff; margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 2px solid #db2777; display: inline-block; }
    .toc-list a { color: #d1d5db; text-decoration: none; font-size: 0.95rem; display: block; padding: 0.25rem 0; transition: all 0.2s; }
    .toc-list a:hover { color: #fff; transform: translateX(5px); }
</style>

<div class="container mx-auto px-3 py-6 max-w-6xl">
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

        <article class="lg:col-span-2 bg-gray-900/50">
            
            <nav class="flex text-sm text-gray-400 mb-6 overflow-x-auto whitespace-nowrap" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/" class="hover:text-pink-500 transition flex items-center gap-1">
                            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20"><path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/></svg>
                            Home
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-3 h-3 text-gray-500 mx-1" fill="none" stroke="currentColor" viewBox="0 0 6 10"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/></svg>
                            <a href="/category/<%= createSlug(post.category[0]) %>" class="hover:text-pink-500 transition"><%= post.category[0] %></a>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="w-3 h-3 text-gray-500 mx-1" fill="none" stroke="currentColor" viewBox="0 0 6 10"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/></svg>
                            <span class="text-gray-200 font-medium truncate max-w-[150px] md:max-w-xs"><%= post.title %></span>
                        </div>
                    </li>
                </ol>
            </nav>

            <header class="mb-8">
                <div class="flex flex-wrap gap-2 mb-4">
                    <% post.category.forEach(cat => { %>
                        <span class="bg-pink-600/20 text-pink-400 text-xs font-bold px-3 py-1 rounded-full uppercase border border-pink-600/30">
                            <%= cat %>
                        </span>
                    <% }) %>
                </div>
                
                <h1 class="text-3xl md:text-4xl lg:text-4xl font-extrabold text-white leading-tight mb-6">
                    <%= post.title %>
                </h1>
                
                <div class="flex items-center text-gray-400 text-sm gap-4 border-b border-gray-700 pb-6">
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                        <%= post.createdAt.toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                    </div>
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                        Redaksi
                    </div>
                </div>
            </header>

            <div class="rounded-xl overflow-hidden shadow-2xl mb-8 border border-gray-700">
                <img src="<%= post.image.startsWith('http') ? post.image : '/uploads/' + post.image %>" 
                     class="w-full h-auto object-cover" 
                     alt="<%= post.title %>">
            </div>

            <div class="prose max-w-none">
                <%- post.content %>
            </div>

            <div class="mt-8 mb-8 pt-6 border-t border-gray-700">
                <div class="flex flex-wrap items-center gap-2">
                    <span class="text-gray-400 font-bold mr-2 text-sm">Tags:</span>
                    <% if(post.tags && post.tags.length > 0) { %>
                        <% post.tags.forEach(tag => { %>
                            <a href="/tag/<%= createSlug(tag) %>" class="px-3 py-1 bg-gray-800 text-gray-300 rounded-full text-xs hover:bg-pink-600 hover:text-white transition border border-gray-700">
                                #<%= tag %>
                            </a>
                        <% }) %>
                    <% } %>
                </div>
            </div>

            <div class="mb-10 p-5 border border-gray-700">
                <h5 class="text-white font-bold mb-4 flex items-center gap-2 text-sm uppercase tracking-wide">
                    <svg class="w-5 h-5 text-pink-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path></svg>
                    Bagikan Artikel
                </h5>
                <div class="flex flex-wrap gap-3">
                    <a href="https://wa.me/?text=<%= encodeURIComponent(post.title + ' ' + seoData.current_url) %>" target="_blank" class="flex-1 min-w-[100px] flex justify-center items-center gap-2 bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium transition text-sm">
                        WhatsApp
                    </a>
                    <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent(seoData.current_url) %>" target="_blank" class="flex-1 min-w-[100px] flex justify-center items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition text-sm">
                        Facebook
                    </a>
                    <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent(post.title) %>&url=<%= encodeURIComponent(seoData.current_url) %>" target="_blank" class="flex-1 min-w-[100px] flex justify-center items-center gap-2 bg-black hover:bg-gray-900 text-white px-4 py-2 rounded-lg font-medium transition text-sm border border-gray-700">
                        Twitter / X
                    </a>
                </div>
            </div>

            <% if (typeof relatedPosts !== 'undefined' && relatedPosts.length > 0) { %>
            <div class="mt-8 mb-8">
                <h4 class="text-xl font-bold text-white mb-6 border-l-4 border-pink-500 pl-3">Artikel Terkait</h4>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <% relatedPosts.forEach(rp => { %>
                    <a href="/read/<%= rp.slug %>" class="group block  overflow-hidden border border-gray-700 hover:border-pink-500 transition">
                        <div class="h-40 overflow-hidden relative">
                            <% const rpImage = rp.image ? (rp.image.startsWith('http') ? rp.image : '/uploads/' + rp.image) : '/img/default-cover.jpg'; %>
                            <img src="<%= rpImage %>" class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                        </div>
                        <div class="p-4">
                            <h5 class="text-white font-bold text-sm line-clamp-2 leading-snug group-hover:text-pink-400 transition">
                                <%= rp.title %>
                            </h5>
                        </div>
                    </a>
                    <% }) %>
                </div>
            </div>
            <% } %>

        </article>

        <aside class="lg:col-span-1 space-y-8">
            
            <div class="p-5 border border-gray-700">
                <h4 class="text-lg font-bold text-white mb-4 flex items-center gap-2 border-b border-gray-600 pb-2">
                    <span class="text-pink-500">#</span> Update Terbaru
                </h4>
                <div class="space-y-4">
                    <% sidebarPosts.slice(0, 5).forEach(post => { %>
                    <div class="flex gap-3 group">
                        <div class="w-16 h-16 flex-shrink-0 rounded overflow-hidden bg-gray-700">
                            <img src="<%= post.image.startsWith('http') ? post.image : '/uploads/' + post.image %>" class="w-full h-full object-cover">
                        </div>
                        <div>
                            <h5 class="text-white text-sm font-semibold line-clamp-2 leading-snug group-hover:text-pink-500 transition">
                                <a href="/read/<%= post.slug %>"><%= post.title %></a>
                            </h5>
                            <small class="text-gray-500 text-xs"><%= post.category[0] %></small>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>

            <div class="p-5 border border-gray-700">
                <h4 class="text-lg font-bold text-white mb-4 flex items-center gap-2 border-b border-gray-600 pb-2">
                    <span class="text-yellow-500">#</span> Jadwal Rilis
                </h4>
                <div class="space-y-4">
                    <% 
                    const jadwalPosts = sidebarPosts.filter(p => p.category.some(c => c.toLowerCase() === 'jadwal')).slice(0, 5);
                    %>
                    <% if(jadwalPosts.length > 0) { %>
                        <% jadwalPosts.forEach(post => { %>
                        <div class="flex gap-3 group">
                            <div class="w-4 h-4 mt-0.5 rounded-full bg-yellow-500/20 text-yellow-500 flex items-center justify-center text-[10px] font-bold">></div>
                            <h5 class="text-gray-300 text-sm font-medium line-clamp-2 hover:text-yellow-500 transition">
                                <a href="/read/<%= post.slug %>"><%= post.title %></a>
                            </h5>
                        </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-gray-500 text-sm">Belum ada jadwal terbaru.</p>
                    <% } %>
                </div>
            </div>

            <div class="p-5 border border-gray-700">
                <h4 class="text-lg font-bold text-white mb-4 flex items-center gap-2 border-b border-gray-600 pb-2">
                    <span class="text-blue-500">#</span> Jelajahi
                </h4>
                <div class="flex flex-wrap gap-2">
                    <a href="/category/anime" class="hover:bg-pink-600 text-gray-300 hover:text-white px-3 py-1.5 rounded text-sm transition">Anime</a>
                    <a href="/category/manga" class="hover:bg-pink-600 text-gray-300 hover:text-white px-3 py-1.5 rounded text-sm transition">Manga</a>
                    <a href="/category/game" class="hover:bg-pink-600 text-gray-300 hover:text-white px-3 py-1.5 rounded text-sm transition">Game</a>
                </div>
            </div>

        </aside>

    </div>
</div>

<script>
    // FUNGSI AUTO-GENERATE DAFTAR ISI (TOC)
    document.addEventListener("DOMContentLoaded", function() {
        const content = document.querySelector('.prose'); 
        const headings = content.querySelectorAll('h2, h3'); 
        
        if (headings.length > 1) { 
            const tocContainer = document.createElement('div');
            tocContainer.className = 'toc-container';
            
            const tocTitle = document.createElement('div');
            tocTitle.className = 'toc-title';
            tocTitle.innerText = 'Daftar Isi';
            
            const tocList = document.createElement('ul');
            tocList.className = 'toc-list';
            
            headings.forEach((heading, index) => {
                const id = 'heading-' + index;
                heading.id = id;
                const li = document.createElement('li');
                const a = document.createElement('a');
                a.href = '#' + id;
                a.innerText = heading.innerText;
                if (heading.tagName === 'H3') {
                    a.className = 'toc-subitem';
                }
                
                a.addEventListener('click', function(e) {
                    e.preventDefault();
                    document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
                });

                li.appendChild(a);
                tocList.appendChild(li);
            });
            
            tocContainer.appendChild(tocTitle);
            tocContainer.appendChild(tocList);
            content.insertBefore(tocContainer, content.firstChild);
        }
    });
</script>

<%- include('partials/footer') %>