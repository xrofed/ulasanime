<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8 mb-10">
    <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
        <h2 class="text-2xl font-bold text-white border-l-4 border-pink-500 pl-3">Dashboard Admin</h2>
        <a href="/admin/post" class="bg-pink-600 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded-lg shadow-lg transition flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
            Tulis Berita Baru
        </a>
    </div>

    <div class="bg-gray-800 rounded-xl shadow-xl border border-gray-700 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-900 text-gray-400 text-sm uppercase tracking-wider border-b border-gray-700">
                        <th class="p-4 font-semibold">Gambar</th>
                        <th class="p-4 font-semibold">Judul & Tanggal</th>
                        <th class="p-4 font-semibold">Kategori</th>
                        <th class="p-4 font-semibold text-right">Aksi</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700 text-gray-300">
                    <% if (posts.length > 0) { %>
                        <% posts.forEach(post => { %>
                        <tr class="hover:bg-gray-750 transition">
                            <td class="p-4 w-24">
                                <img src="<%= post.image.startsWith('http') ? post.image : '/uploads/' + post.image %>" 
                                     class="w-20 h-14 object-cover rounded border border-gray-600">
                            </td>
                            <td class="p-4">
                                <div class="flex items-center gap-2 mb-1">
                                    <h6 class="font-bold text-white line-clamp-1"><%= post.title %></h6>
                                    <% if(post.status === 'draft') { %>
                                        <span class="bg-red-500/20 text-red-400 text-[10px] px-2 py-0.5 rounded border border-red-500/30">DRAFT</span>
                                    <% } %>
                                </div>
                                <small class="text-gray-500"><%= post.createdAt.toLocaleDateString('id-ID') %></small>
                            </td>
                            <td class="p-4">
                                <div class="flex flex-wrap gap-1">
                                    <% post.category.forEach(cat => { %>
                                        <span class="bg-gray-700 text-pink-400 text-xs px-2 py-1 rounded border border-gray-600"><%= cat %></span>
                                    <% }) %>
                                </div>
                            </td>
                            <td class="p-4 text-right">
                                <div class="flex justify-end gap-2">
                                    
                                    <% if(post.status === 'published') { %>
                                    <a href="/admin/ping-google/<%= post._id %>" class="p-2 bg-green-600/20 text-green-400 rounded hover:bg-green-600 hover:text-white transition" title="Ping ke Google Index">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                                    </a>
                                    <% } %>

                                    <a href="/read/<%= post.slug %>" target="_blank" class="p-2 bg-blue-600/20 text-blue-400 rounded hover:bg-blue-600 hover:text-white transition" title="Lihat">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
                                    </a>
                                    
                                    <a href="/admin/edit/<%= post._id %>" class="p-2 bg-yellow-600/20 text-yellow-400 rounded hover:bg-yellow-600 hover:text-white transition" title="Edit">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                                    </a>
                                    
                                    <a href="/admin/delete/<%= post._id %>" onclick="return confirm('Yakin ingin menghapus berita ini?')" class="p-2 bg-red-600/20 text-red-400 rounded hover:bg-red-600 hover:text-white transition" title="Hapus">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="p-8 text-center text-gray-500 bg-gray-800">
                                <p class="text-lg">Belum ada berita.</p>
                                <p class="text-sm">Silakan posting berita pertama Anda.</p>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>